@import 'variables.styl';

*
  box-sizing border-box

html
  width 100%
  height 100%
  margin 0
  padding 0

body
  background #eee
  margin 0
  padding 0
  width 100%
  height 100%
  overflow-y scroll
  font-family 'Roboto', Sans-Serif

/* Hide the pop-up calendar from webkit browsers */
input::-webkit-calendar-picker-indicator{
  display: none;
}
input[type="date"]::-webkit-input-placeholder{
  visibility: hidden !important;
}

.max-width
  max-width max-width
  margin 0 auto
  position relative

.main-content {
  border-top (cr-height + 20)px solid transparent
  position relative
  height 100%
}

.normal-list {
  list-style none
  padding 0
  margin 0
}

  .normal-list__item {
    display block
    font-size 18px
    padding 10px 20px
    cursor pointer
    &:hover {
      background #f3f3f3
    }
    & .fa {
      margin-right 10px
    }
  }

.button {
  border-radius:3px;
  padding:6px 24px;
  font-weight:900;
  font-size:14px;
}
  .button--primary {
    border:2px solid op-blue;
    color:op-blue;
    background:#fff;
  }

.full-backdrop {
  position fixed
  z-index 200
  top 0
  left 0
  width 100%
  height 100%
  background rgba(0,0,0,0.4)
}

.cf {
  *zoom: 1;

  &:before,
  &:after {
    content: " "; /* 1 */
    display: table; /* 2 */
  }

  &:after {
    clear: both;
  }
}