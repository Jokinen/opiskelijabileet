@import 'variables.styl';

.control-row
  position fixed
  top nav-height
  left 0
  z-index 99
  background op-blue
  height cr-height
  width 100%
  color #fff

.cr-mock-label
  float left
  font-size 16px
  line-height cr-height
  margin-right 30px
  color rgba(255,255,255,0.6)

.cr-dropdown__wrap--m
  float left
  margin 0 20px 0 0

.cr-dropdown__wrap {
  position relative
  float left
  margin 0 20px 0 0
}

  .cr-dropdown__toggle
    background none
    border none
    padding 0 30px 0 0
    height cr-height
    line-height cr-height
    font-size 16px
    font-family "Roboto", Sans-Serif
    font-weight 500
    position relative
    z-index 1000
    transition all 0.1s ease-in
    outline none
    text-align left
    & .fa
      margin-left 10px
      font-size 14px
      position absolute
      top 20px
      right 0
    &--open
      color #333
      width 260px
      & .fa
        right 30px

  .cr-dropdown
    background #fff
    position absolute
    top 6 px
    left -14px
    border-top 50px solid #fff
    width 0
    height 0
    visibility hidden
    overflow hidden
    transition all 0.1s ease-in
    box-shadow 0 1px 10px rgba(0,0,0,0.20), 0 0 0 1px rgba(0,0,0,.04)
    border-radius 1px
    &--open
      visibility visible
      width 260px
      height 200px
      overflow-y scroll
      color #333

  .cr-dropdown--m
    background #fff
    position absolute
    left 0
    width 100%

  .cr-dropdown-blocker--open
    position fixed
    top 0
    left 0
    width 100%
    height 100%