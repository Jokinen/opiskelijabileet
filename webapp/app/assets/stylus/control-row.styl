@import 'variables.styl';

.control-row {
  position fixed
  top nav-height
  left 0
  z-index 99
  background op-blue
  width 100%
  color #fff
}

.cr-dropdown__toggle
  background none
  border none
  padding 0 30px 0 0
  height cr-height
  line-height cr-height
  font-size 16px
  font-family "Roboto", Sans-Serif
  font-weight 500
  position relative
  z-index 1000
  transition all 0.1s ease-in
  outline none
  text-align left
  & .fa
    margin-left 10px
    font-size 14px
    position absolute
    top 20px
    right 0

.cr-menu__controls {
  height cr-height
}
  .cr-menu__control {
    height cr-height
    line-height cr-height
    background transparent
    border none
    padding 0
    margin 0 40px 0 0
    float left
  }

  .cr-menu__content {
    background op-blue
    position fixed
    z-index 98
    top -100%
    left 0
    width 100%
    transition top 0.4s ease-in
    &--open {
      top cr-height
    }
  }

