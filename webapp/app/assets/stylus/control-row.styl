@import 'variables.styl';

.control-row {
  position fixed
  top nav-height
  left 0
  z-index 99
  background op-blue
  width 100%
  color #fff
}

.cr-dropdown__toggle
  background none
  border none
  padding 0 30px 0 0
  height cr-height
  line-height cr-height
  font-size 16px
  font-family "Roboto", Sans-Serif
  font-weight 500
  position relative
  z-index 1000
  transition all 0.1s ease-in
  outline none
  text-align left
  &--open {
    border-bottom 2px solid rgba(255,255,255, 0.3)
  }
  & .fa
    margin-left 10px
    font-size 14px
    position absolute
    top 20px
    right 0

.cr-menu__controls {
  height cr-height
  position relative
  z-index 100
  background op-blue
}
  .cr-menu__control {
    height cr-height
    line-height cr-height
    position relative
    background transparent
    border none
    border-bottom 0 solid rgba(255,255,255, 0.6) // for animation
    padding 0 24px 0 0
    margin 0 40px 0 0
    float left
    outline none
    transition border 0.2s ease-in
    &--open {
      border-bottom 4px solid rgba(255,255,255, 0.4)
    }
    & .fa {
      margin-left 10px
      font-size 14px
      position absolute
      top 18px
      right 0
    }
  }

  .cr-date-button {
    height 26px
    width 26px
    margin 12px 0 10px 0
    border-radius 100%
    border none
    background #732885
    & .fa {
      margin-top 3px
    }
  }
  .cr-date-button__separator {
    float left
    width 15px
    height 1px
    margin 24px 0 25px
    border-top 2px dotted rgba(255,255,255,0.3)
  }

  .cr-menu__content {
    background op-blue
    position absolute
    z-index 99
    left 0
    top cr-height
    width 0
    max-height 0
    visibility hidden
    box-shadow 0 1px 10px rgba(0,0,0,0.20), 0 0 0 1px rgba(0,0,0,.04)
    border-radius 0 0 3px 3px
    background #fff
    transition all 0.4s ease-in 0.1s
    overflow hidden
    -webkit-backface-visibility: hidden;
    &--open {
      visibility visible
      transition all 0.4s ease-in
      width 100%
      max-height 300px
    }
    &--date {
      left 97px
    }
    &--open&--date {
      width 762px
    }
  }
    .cr-menu__item {
      position relative
      z-index -1
      width 1000px
      opacity 0
      top -60px
      left 0
      padding-bottom 60px
      transition opacity 0.4s ease-in, top 0.2s ease-in 0.1s, padding-bottom 0.2s ease-in 0.1s
      &--open {
        transition opacity 0.4s ease-in, top 0.4s ease-in, padding-bottom 0.4s ease-in
        opacity 1
        top 0
        padding-bottom 0
      }
      &--date {
        width 762px
      }
    }

.city-list {
  margin 0
  padding 0
  list-style none
  font-size 18px
}
  .city-list__item {
    color #555
    width 33.33333%
    padding 10px 20px
    float left

    &:nth-child(3n-2) {
      border-bottom 2px solid rgba(0,0,0,0.1)
      border-right 2px solid rgba(0,0,0,0.1)
    }
    &:nth-child(3n-1) {
      border-bottom 2px solid rgba(0,0,0,0.1)
    }
    &:nth-child(3n) {
      border-bottom 2px solid rgba(0,0,0,0.1)
      border-left 2px solid rgba(0,0,0,0.1)
    }

    &--last-row {
      border-bottom none !important
    }
  }

.date-menu {}
  .date-menu__h3 {
    color #aaa
    font-weight 500
    font-size 16px
    margin 0 0 8px
  }
  .date-menu__quick {
    width 240px
    float right
    padding 14px 20px
    border-left 1px solid #ccc

    & .button {
      display block
      margin-bottom 5px
      width 200px
    }
  }

.cr-form-group {
  float left
}

.cr-input__wrap {
  float left
  position relative
  height cr-height
  line-height cr-height

  & .fa {
    position absolute
    left 10px
    top 15px
    color rgba(255,255,255,0.6)
  }
}
  .cr-input {
    position relative
    background rgba(255,255,255,0.08)
    padding 2px 0 2px 40px
    top -1px
    border none
    color rgba(255,255,255,0.96)
    border-bottom 2px solid rgba(255,255,255,0.3)
  }

  .cr-input__separator {
    float left
    width 30px
    height 1px
    margin 24px 0 25px
    border-top 2px solid rgba(255,255,255,0.3)
  }