.city-list {
  margin 0
  padding 0
  list-style none
  font-size 18px
}
  .city-list__item {
    color rgba(255,255,255,0.7)
    width 33.33333%
    padding 10px 20px
    float left

    &:nth-child(3n-2) {
      border-bottom 2px solid rgba(255,255,255,0.2)
      border-right 2px solid rgba(255,255,255,0.2)
    }
    &:nth-child(3n-1) {
      border-bottom 2px solid rgba(255,255,255,0.2)
    }
    &:nth-child(3n) {
      border-bottom 2px solid rgba(255,255,255,0.2)
      border-left 2px solid rgba(255,255,255,0.2)
    }

    &--last-row {
      border-bottom none !important
    }
  }

.cr-form-group {
  float left
}

.cr-input__wrap {
  float left
  position relative
  height cr-height
  line-height cr-height

  & .fa {
    position absolute
    left 2px
    top 14px
    color rgba(255,255,255,0.6)
  }
}
  .cr-input {
    background transparent
    padding 0 0 0 40px
    border none
    color rgba(255,255,255,0.96)
    border-bottom 2px solid rgba(255,255,255,0.2)
  }

  .cr-input__separator {
    float left
    height cr-height
    line-height cr-height
    margin 0 20px
    color rgba(255,255,255,0.6)
  }