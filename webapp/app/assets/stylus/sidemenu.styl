@import 'variables.styl';

.sidemenu {
  height 100%
  width 400px
  max-width 100%
  position fixed
  z-index 10
  top 0
  right -400px
  border-top cr-height solid transparent
  background-clip padding-box
  background #fff
  transition all 0.2s ease-in
  &--open {
    right 0
    box-shadow 0 -1px 8px rgba(0,0,0,0.4)
  }
}
  .sidemenu__blocker {
    position fixed
    z-index 1
    left 0
    top 0
    width 100%
    height 100%
    display none
    &--open {
      display block
    }
  }
  .sidemenu__body {
    position absolute
    top 0
    left 0
    height 100%
    width 100%
    border-bottom 72px solid transparent
    padding 10px 20px
    overflow-y auto
  }
  .sidemenu__notice {
    padding 8px 14px
    margin-bottom 16px
    color #333
    border 1px solid rgba(0,0,0,0.1)
    border-radius 6px
    background warning-color
  }
    .sidemenu__title {
      font-size 18px
      margin 0 0 8px 0
      color #454545
      padding-bottom 8px
      border-bottom 1px solid #eee
    }
    .sidemenu__description {
      color #566862
      white-space pre-line
    }
  .sidemenu__footer {
    position absolute
    bottom 0
    left 0
    right 0
    height 72px
    padding 16px 0 10px
    margin 0 20px
    border-top 1px solid #ddd
  }

  .sidemenu__condensed-list {
    list-style none
    font-size 15px
    margin 0 0 5px
    padding 0
    text-align center
  }
    .sidemenu__condensed-item {
      margin-left 5px
      display inline-block
    }
      .sidemenu__condensed-link {
        color link-color
        font-weight 600
        text-decoration none

        &.disabled {
          color #aaa
          text-decoration line-through
        }
      }

  .sidemenu__copyright {
    text-align center
    color #aaaaaa
    font-size 15px
  }