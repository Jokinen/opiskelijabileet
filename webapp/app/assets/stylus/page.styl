@import 'variables.styl';

.page__bg {
  background op-blue
  height 200px
  width 100%
  position fixed
  top 0
  left 0
}

.page {
  max-width 1000px
  margin 0 auto 40px
  position relative
  z-index 100
  background #fff
  border-radius 4px
  box-shadow 0 1px 10px rgba(0,0,0,0.20), 0 0 0 1px rgba(0,0,0,.04)
}