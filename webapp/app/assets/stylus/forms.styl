@import 'variables.styl';

.checkbox-label {
  position relative
  padding-left 30px

  input[type="checkbox"] {
    width 20px
    height 20px
    position absolute
    left 0
  }
}

  .checkbox-label__tick {
    width 20px
    height 20px
    position absolute
    left 0
    display inline-block
    background #ff
    border-radius 4px

    &:before {
      content " "
      display block
      position absolute
      top 3px
      left 3px
      width 14px
      height 14px
      border-radius 3px
    }
    input[type="checkbox"]:checked + &:before {
        background op-blue
      }
  }