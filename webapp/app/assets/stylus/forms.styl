@import 'variables.styl';

.checkbox-label {
  position relative
  padding-left 30px

  input[type="checkbox"] {
    width 0
    height 0
    visibility hidden
    position absolute
    left 0
    top 2px
  }
}

  .checkbox-label__tick {
    width 18px
    height 18px
    position absolute
    left 0
    top 0
    display inline-block
    background op-blue
    border-radius 4px

    &:before {
      content " "
      display block
      position absolute
      top 3px
      left 3px
      width 12px
      height 12px
      border-radius 2px
      background #fff
    }
    input[type="checkbox"]:checked + &:before {
      background op-blue
    }
    input[type="checkbox"]:checked + &:after {
      content "\f00c"
      font-family fontawesome
      font-size 12px
      color #fff
      display block
      position absolute
      top 3px
      left 0.5px
      text-align center
      width 100%
      height 12px
    }
  }

.form {
}
  .form__body {
    padding 40px 5%
  }
  .form__control-row {
    width 100%
    padding 20px 32%
    border-top 1px solid rgba(0,0,0,0.1)
  }

.form-group {
  width 100%
  padding 30px 0
  border-bottom 1px solid rgba(0,0,0,0.1)
  {cf}
  &:last-child {
    border none
  }
  &--error {
    @extends .form-group
    color danger-color
  }
}
 .form-group__detail {
   width 30%
   float left
 }
 .form-group__label {
   font-weight bold
   display block
   margin 0 0 4px 0
 }
 .form-group__input {
   display block
   width 70%
   float left
 }
 .form-group__control {
   width 100%
   padding 8px
   border 1px solid rgba(0,0,0,0.2)
   border-radius 3px
   outline none
   display block
   &:active, &:focus {
     border 1px solid op-blue
   }
   textarea& {
     height 120px
   }
   .form-group--error & {
     border-color danger-color
   }
 }
  .form-group__image {
    margin-top 10px
    img {
      max-width 100%
    }
  }
  .form-group__submit {
    background op-blue
    color #fff
    font-weight 600
    padding 10px 20px
    border none
    font-family 'Roboto', Sans-serif
    border-radius 3px
  }

.input-group {

  &--half {
    @extends .input-group
    width 48%
    margin-right 2%
    float left
    & + & {
      margin 0 0 0 2%
    }
  }
  &--40 {
    width 37%
    margin-right 4%
    float left

  }
  &--20 {
    width 18%
    float left
    margin 0
  }
}