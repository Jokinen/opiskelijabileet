@import 'variables.styl';

.checkbox-label {
  position relative
  padding-left 30px

  input[type="checkbox"] {
    width 20px
    height 20px
    position absolute
    left 0
    top 2px
  }
}

  .checkbox-label__tick {
    width 18px
    height 18px
    position absolute
    left 0
    top 0
    display inline-block
    background op-blue
    border-radius 4px

    &:before {
      content " "
      display block
      position absolute
      top 3px
      left 3px
      width 12px
      height 12px
      border-radius 2px
      background #fff
    }
    input[type="checkbox"]:checked + &:before {
      background op-blue
    }
    input[type="checkbox"]:checked + &:after {
      content "\f00c"
      font-family fontawesome
      font-size 12px
      color #fff
      display block
      position absolute
      top 1px
      left 0.5px
      text-align center
      width 100%
      height 12px
    }
  }