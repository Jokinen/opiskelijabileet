.date-list {
  overflow-y:hidden;
  overflow-x:auto;
  white-space nowrap
  position:absolute;
  top:0;
  left:0;
  bottom:0;
  right:0;
  text-align: center;
}
  .date-list__date {
    width: 400px;
    height:100%;
    display: inline-block;
    vertical-align: top;
    white-space: normal;
    margin: 0 5px;
    border-bottom 10px solid transparent
    text-align left
    &:first-child {
      margin-left 20px
    }
    &:last-child {
      margin-right 20px
    }
  }
.date-title {
  padding 0 0 5px
  text-align center
}
  .date-title__weekday {
    color #999
    font-size 16px
    text-transform uppercase
  }
  .date-title__date {
    color #999
    font-size 15px
  }

.event-list {
  max-height 100%
  overflow-y auto
  padding 0 10px 20px
  margin 0 -10px

  &--empty {
    width 80%
    height 90%
    margin 0 auto
    background rgba(0,0,0,0.05)
    border-radius 8px
    text-align center
    padding 160px 50px
    font-size 22px
    font-weight 600
    color rgba(0,0,0,0.16)
  }
}

.event-item {
  background:#fff;
  margin-bottom:15px;
  box-shadow: 0 1px 10px rgba(0,0,0,0.20), 0 0 0 1px rgba(0,0,0,.04);
  border-radius: 3px;

  &:hover {
    transition box-shadow 0.2s ease-in
    box-shadow 0 1px 10px op-blue, 0 0 0 1px rgba(0,0,0,0.20)
  }

  &--selected {
    position fixed
    left 0
    right 0
    top 0
    z-index 2001
    width 100%
    max-width 600px
    margin 1% auto
    max-height 96%
    overflow-y auto
    transition all 0.2s ease-in
  }
}
  .event-item__close {
    width 40px
    height 40px
    position absolute
    z-index 100
    right 0
    top 6px
    cursor pointer
    color #fff
    text-shadow 0 0 3px rgba(0,0,0,0.4)

    &:hover {
      transition color 0.1s ease-in
      color #fff
    }

    &:before {
      content "\f057"
      display block
      width 100%
      height 100%
      text-align center
      font-family fontawesome
      font-size 30px
    }
  }

  .event-item__header {
    height 100px
    position:relative;

    &--selected {
      height 200px
    }
  }
    .event-item__image {
      position:absolute;
      top:0;
      left:0;
      width:100%;
      height:100%;
      border-radius:3px 3px 0 0;
      overflow:hidden;
    }
      .event-item__image img {}

  .event-item__body {
  }
    .event-item__title-text-wrap {
      padding:10px 0;
    }
      .event-item__name {
        font-size:19px;
        font-weight:500;
        padding 0 16px 0
        &--selected {
          font-size 26px
          padding 4px 16px 12px
        }
      }
      .event-item__inforow {
        color #555
        padding 4px 16px 0
        &--selected {
          padding 10px 0
          border-top 1px solid #eee
          border-bottom 1px solid #eee
        }
        & .fa {
          font-size 15px
          color op-blue
          float left
          width 17px
          height 17px
          margin 3px 4px 1px 0
          border-radius 3px
          text-align center
        }
      }
        .event-item__label {
          text-transform uppercase
          color #aaa
          font-size 12px
        }
        .event-item__organizer {
          float:left;
          padding 0 14px 0 0
          &--selected {
            padding 0 16px 0
            font-size 18px
            border-right 1px solid #eee
            &:after {
              display none
            }
          }
          & .fa {
            margin-top 4px
            font-size 13px
          }
        }
        .event-item__place {
          float left
          padding 0 14px 0 0
          &--selected {
            padding 0 16px 0
            font-size 18px
            border-right 1px solid #eee
            &:after {
              display none
            }
          }
        }
        .event-item__date-range {
          float:left;
          &--selected {
            padding 0 16px 0
            font-size 18px
          }
        }
          .event-item__start-date {
            float:left;
            &:after {
              content: '\2013';
              display:inline-block;
              margin:0 5px;
            }
          }
          .event-item__end-date {
            float:left;
          }
    .event-item__main {
      position relative
      margin-top 6px
    }
      .event-item__description {
        padding:0 16px 10px;
        margin-right 200px
        white-space pre-wrap
      }
      .event-item__links {
        position absolute
        top 0
        right 0
        width 200px
        padding 0 10px 0
      }
        .event-item__link {
          display block
          width 100%
          padding 5px 16px 5px 12px
          margin 0 0 8px
          border-radius 4px
          text-decoration none
          color #fff
          font-weight 600
          & .fa {
            width 20px
          }
          &--fb {
            color #3b5998
            border 2px solid #3b5998
          }
          &--insta {
            color #517fa4
            border 2px solid #517fa4
          }
          &--tw {
            color #00aced
            border 2px solid #00aced
          }
          &--url {
            color rgba(0,0,0,0.5)
            border 2px solid rgba(0,0,0,0.16)
          }
        }
    .event-item__control-row {
      padding:0 0 16px;
      text-align:center;
    }